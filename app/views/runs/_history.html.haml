- cache ["v5", run] do
  %li.list-group-item{class: run.finished_successfully? || run.manually_stopped? ? "alert-success" : "alert-danger"}
    - if run.auto?
      Auto
    - else
      Manually
    ran
    - if run.git_revision
      revision
      = link_to run.git_revision[0..7], run.git_revision_github_url
    and
    - if run.finished_successfully?
      completed successfully
    - elsif run.manually_stopped?
      manually stopped
    - else
      failed
    #{timeago_tag(run.finished_at, force: true)}.

    .pull-right.hidden-xs
      %div
        run time
        = "%.1f s" % run.wall_time
      %div
    %div= database_changes_in_words(run)
    %div
      - if run.connection_logs.count > 0
        = pluralize(run.connection_logs.count, "page")
        scraped
