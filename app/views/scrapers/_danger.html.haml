- if can? :destroy, @scraper
  .row
    .col-md-8
      .panel.panel-danger
        .panel-heading
          %h3.panel-title Here be dragons!
        .panel-body
          %p
            %strong Be careful here, these actions can't be undone.
        %ul.danger-settings-options-list.list-group
          %li.list-group-item
            %h4 Clear this scraper’s database
            %p All your data will be gone!
            = button_to "Clear database", clear_scraper_path(@scraper),
              {class: "btn btn-danger",
                data: {confirm: "All the data you’ve scraped will be deleted. Are you sure you want to clear this scraper’s database?"}}
          %li.list-group-item
            %h4 Delete this scraper
            %p Delete the entire scraper from morph.io, data and all.
            = button_to "Delete scraper", @scraper,
              {class: "btn btn-danger", method: :delete,
                data: {confirm: "Scraper #{@scraper.full_name} and its database will be deleted from morph.io. Are you sure you want to delete your scraper?"}}
